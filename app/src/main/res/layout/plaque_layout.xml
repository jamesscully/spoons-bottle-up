<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/border">

    <Button
        android:id="@+id/btnInc"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnDec"
        android:layout_weight="1"
        android:text="+" />

    <Button
        android:id="@+id/btnStepInc"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnInc"
        android:layout_weight="1"
        android:text="++" />

    <Button
        android:id="@+id/btnDec"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnStepDec"
        android:layout_weight="1"
        android:text="-" />

    <Button
        android:id="@+id/btnStepDec"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:text="--" />

    <TextView
        android:id="@+id/strBtlName"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_weight="1"
        android:drawableRight="@drawable/border"
        android:gravity="left|center"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/bottleMax"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingRight="0dp"
        android:text="?"
        android:textColor="#000000"
        android:textSize="24sp" />


</RelativeLayout>