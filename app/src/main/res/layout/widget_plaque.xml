<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plaque_layout_root"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="right"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plaque_text_count"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plaque_text_max"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="right"
            android:text="/ 32"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/tertiary_text_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plaque_text_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="24"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="tester"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="0"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plaque_button_inc"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/actual_circle_button"
            android:text="+"
            android:textAlignment="center" />

        <Button
            android:id="@+id/plaque_button_stepinc"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/actual_circle_button"
            android:text="++"
            android:textAlignment="center" />

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <Button
            android:id="@+id/plaque_button_stepdec"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/actual_circle_button"
            android:text="--"
            android:textAlignment="center" />

        <Button
            android:id="@+id/plaque_button_dec"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/actual_circle_button"
            android:text="-"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>