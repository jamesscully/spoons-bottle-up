<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plaque_layout_root"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/plaque_text_count"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/plaque_text_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/plaque_button_stepinc"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/actual_circle_button"
        android:text="++"
        android:textAlignment="center" />

    <Button
        android:id="@+id/plaque_button_stepdec"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/actual_circle_button"
        android:text="--"
        android:textAlignment="center" />

    <Space
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_weight="0" />

    <Button
        android:id="@+id/plaque_button_inc"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/actual_circle_button"
        android:text="+"
        android:textAlignment="center" />

    <Button
        android:id="@+id/plaque_button_dec"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/actual_circle_button"
        android:text="-"
        android:textAlignment="center" />
</LinearLayout>